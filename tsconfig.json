{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "jsx": "react",

    /* Modules */
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true,
    "include": []
  }
}
